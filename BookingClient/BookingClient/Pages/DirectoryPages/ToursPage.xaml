<Page x:Class="BookingClient.Pages.ToursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="ToursPage"
      Background="#CACACA"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="DarkStandartButton" TargetType="Button" BasedOn="{StaticResource DarkStandartButton}"/>
        <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource AddButton}"/>
        <Style x:Key="CopyButton" TargetType="Button" BasedOn="{StaticResource CopyButton}"/>
        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource EditButton}"/>
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource DeleteButton}"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="auto" x:Name="RecordChangeBlock"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Height="79" Grid.Row="0" Margin="3 3 3 0" CornerRadius="20" Background="#DDDDDD" x:Name="ChangePanel" SizeChanged="ChangePanel_SizeChanged">
                <DockPanel Margin="16 0">
                    <Button
                        Style="{StaticResource DarkStandartButton}"
                        x:Name="AddRecordButton"
                        Content="Добавить"
                        Click="AddRecordButton_Click"
                        Margin="0 0 12 0"
                        />
                    <Button
                        Style="{StaticResource DarkStandartButton}"
                        x:Name="CopyRecordButton"
                        Content="Копировать"
                        Click="CopyRecordButton_Click"
                        Margin="0 0 12 0"
                        />
                    <Button
                        Style="{StaticResource DarkStandartButton}"
                        x:Name="EditRecordButton"
                        Content="Изменить"
                        Click="EditRecordButton_Click"
                        Margin="0 0 12 0"
                        />
                    <Button
                        Style="{StaticResource DarkStandartButton}"
                        x:Name="DeleteRecordButton"
                        Content="Удалить"
                        Click="DeleteRecordButton_Click"
                        Margin="0 0 12 0"
                        />
                    <ComboBox
                        x:Name="FilterComboBox"
                        Width="180"
                        SelectionChanged="FilterComboBox_SelectionChanged"
                        Margin="0 0 12 0"
                        />
                    <TextBox
                        Style="{StaticResource SearchTextBox}"
                        x:Name="FilterTextBox"
                        TextChanged="FilterTextBox_TextChanged"
                        />
                </DockPanel>
            </Border>

            <DataGrid
                Margin="14"
                x:Name="RecordsDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Тур" Binding="{Binding tour_name}" Width="10*"/>
                    <DataGridTextColumn Header="Описание тура" Binding="{Binding tour_description}" Width="10*"/>
                    <DataGridTextColumn Header="Нач. город" Binding="{Binding cities.city_name}" Width="5*"/>
                    <DataGridTextColumn Header="Кон. город" Binding="{Binding cities1.city_name}" Width="5*"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding price}" Width="3*"/>
                    <DataGridTextColumn Header="Дни" Binding="{Binding day_count}" Width="3*"/>
                    <DataGridTextColumn Header="Размер группы" Binding="{Binding max_group_size}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Column="2" Background="#DDDDDD" Width="270" Visibility="Collapsed" x:Name="DlgPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label 
                FontSize="24"
                x:Name="RecordChangeTitle" 
                Content="None"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />

            <ScrollViewer Grid.Row="1">
                <StackPanel 
                    Margin="10,0,10,0"
                    Orientation="Vertical"
                    >
                    <Label Content="Название тура"/>
                    <TextBox 
                        x:Name="TourNameTextBox" 
                        Text="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.tour_name, Mode=OneWay}"
                        />

                    <Label Content="Описание тура"/>
                    <TextBox
                        x:Name="TourDescriptionTextBox" 
                        Text="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.tour_description, Mode=OneWay}"
                        />

                    <Label Content="Начальный город"/>
                    <ComboBox
                        x:Name="BeginCityComboBox" 
                        DisplayMemberPath="city_name"
                        SelectedItem="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.cities, Mode=OneWay}"
                        IsEditable="True"/>

                    <Label Content="Конечный город"/>
                    <ComboBox 
                        x:Name="EndCityTextBox" 
                        DisplayMemberPath="city_name"
                        SelectedItem="{Binding  ElementName=RecordsDataGrid,  Path=SelectedItem.cities1, Mode=OneWay}"
                        IsEditable="True"/>

                    <Label Content="Цена"/>
                    <TextBox 
                        x:Name="PriceTextBox" 
                        Text="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.price, Mode=OneWay}"
                        />

                    <Label Content="Количество дней"/>
                    <TextBox 
                        x:Name="DayCountTextBox" 
                        Text="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.day_count, Mode=OneWay}"
                        />

                    <Label Content="Размер группы"/>
                    <TextBox
                        x:Name="MaxGroupSizeTextBox" 
                        Text="{Binding ElementName=RecordsDataGrid, Path=SelectedItem.max_group_size, Mode=OneWay}"
                        />
                </StackPanel>
            </ScrollViewer>

            <Border
                Height="79"
                CornerRadius="20"
                Background="#D1D0D0"
                Grid.Row="3"
                Margin="3">
                <StackPanel Orientation="Horizontal" Margin="16 0">
                    <Button 
                        Style="{StaticResource LightStandartButton}"
                        x:Name="CommitChangeRecordsButton" 
                        Content="Принять"
                        Click="CommitChangeRecordsButton_Click"
                        Margin="0 0 12 0"/>

                    <Button 
                        x:Name="RollbackChangeRecordsButton"
                        Style="{StaticResource LightStandartButton}"
                        Content="Отменить"
                        Click="RollbackChangeRecordsButton_Click"/>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
