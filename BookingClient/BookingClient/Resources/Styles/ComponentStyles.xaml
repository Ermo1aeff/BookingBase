    <!--Стили горизонтального скролбара-->

    <!--Cветлый фон-->
    <ControlTemplate x:Key="LightHorizontalScrollBar" TargetType="{x:Type ScrollBar}">
        <Grid>
            <Border 
                CornerRadius="8"
                Background="#DDDDDD" />
            <Track 
                x:Name="PART_Track"
                IsDirectionReversed="False">
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}" />
                </Track.Thumb>
            </Track>
        </Grid>
    </ControlTemplate>
    
    <!--Темный фон-->
    <ControlTemplate x:Key="DarkHorizontalScrollBar" TargetType="{x:Type ScrollBar}">
        <Grid>
            <Border 
                CornerRadius="8"
                Background="#CACACA" />
            <Track 
                x:Name="PART_Track"
                IsDirectionReversed="False">
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                </Track.Thumb>
            </Track>
        </Grid>
    </ControlTemplate>

    <!--Общий стиль скролбара-->
    
    <!--Светлый фон-->
    <Style x:Key="LightScrollBar" TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ViewportSize" Value="2" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="10" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="16" />
                <Setter Property="Template" Value="{StaticResource LightHorizontalScrollBar}" />
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="16" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Template" Value="{StaticResource LightVerticalScrollBar}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Темняй фон-->
    <Style x:Key="DarkScrollBar" TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ViewportSize" Value="2" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="10" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="16" />
                <Setter Property="Template" Value="{StaticResource DarkHorizontalScrollBar}" />
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="16" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Template" Value="{StaticResource DarkVerticalScrollBar}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    
    <!--=====================Лист бокс=================================-->
    
    
    <!--Лист бокс заказов-->
    <Style x:Key="OrderListBox" TargetType="ListBox">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="true" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Grid>
                        <!--<Grid.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=Border}" />
                        </Grid.OpacityMask>
                        <Border x:Name="Border" CornerRadius="20,20,0,0" Background="#CACACA"/>-->

                        <ScrollViewer Focusable="false" CanContentScroll="False">
                            <StackPanel IsItemsHost="True" Orientation="Horizontal" Margin="-6,0,-6,0"/>
                        </ScrollViewer>
                    </Grid>

                    <!--<ControlTemplate.Triggers>
                        <Trigger Property="IsGrouping" Value="true">
                            <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                        </Trigger>
                    </ControlTemplate.Triggers>-->
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Итем лист бокса заказов-->
    <Style TargetType="{x:Type ListBoxItem}" x:Key="OrderListBoxItem">
        <Setter Property="Margin" Value="6,0,6,14"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Grid>
                        <Border 
                            CornerRadius="20"
                            Background="#DDDDDD" 
                            Width="126" Height="113"
                            x:Name="PART_Border">
                            <ContentPresenter/>
                        </Border>
                        <Border 
                            CornerRadius="20" 
                            Background="Transparent" 
                            Width="126" Height="113"
                            x:Name="PART_BorderThicknes"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_BorderThicknes" Property="BorderThickness" Value="1.5"/>
                            <Setter TargetName="PART_BorderThicknes" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="#66C04F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Лист бокс расписания-->
    <Style x:Key="DeparturesListBox" TargetType="ListBox">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Grid>
                        <ScrollViewer Margin="0" Focusable="false" CanContentScroll="False">
                            <StackPanel IsItemsHost="True" Orientation="Vertical" Margin="0,-9,0,-9"/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Итем лист бокса расписания-->
    <Style TargetType="{x:Type ListBoxItem}" x:Key="DeparturesListBoxItem">
        <Setter Property="Margin" Value="0,9,7,9"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Grid>
                        <Border 
                            x:Name="PART_Border"
                            CornerRadius="18" 
                            Background="#D1D0D0"
                            Width="393"
                            Height="68">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Grid.ColumnSpan="3"/>

                                <Border 
                                    Grid.Column="1"
                                    x:Name="PART_ArrowButton"
                                    CornerRadius="18"
                                    Background="#9F9F9F"
                                    Width="60"
                                    Height="32">

                                    <Path
                                        Data="{StaticResource PathLongArrow}"
                                        Width="32"
                                        Height="32"
                                        Fill="Black"/>
                                </Border>
                            </Grid>
                        </Border>
                        <Border
                            CornerRadius="18" 
                            Background="Transparent" 
                            Width="393" Height="68"
                            x:Name="PART_BorderThicknes"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_BorderThicknes" Property="BorderThickness" Value="1.5"/>
                            <Setter TargetName="PART_BorderThicknes" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="#4DA338"/>
                            <Setter TargetName="PART_ArrowButton" Property="Background" Value="#66C04F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


