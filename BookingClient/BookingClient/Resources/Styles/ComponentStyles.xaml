    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="InterMedium">pack://application:,,,/Fonts/#Inter Medium</FontFamily>

    <DropShadowEffect
        x:Key="DropShadowEffect"
        Color="black"
        Opacity="1"
        BlurRadius="14"
        ShadowDepth="2"
        Direction="315"
