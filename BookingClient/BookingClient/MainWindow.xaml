<Window x:Class="BookingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingClient"
        mc:Ignorable="d"
        Title="Bookimg Client"
        Height="520"
        Width="860"
        MinWidth="800"
        MinHeight="450"
        Icon="/BookingIco.ico"
        Name="BookingClient"
        WindowState="Maximized"
        Style="{StaticResource WindowStyle}"
        Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="Silver">
            <Button
                x:Name="ToursButton"
                Style="{StaticResource MenuButton}"
                Content="Туры"
                Click="ToursButton_Click"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Услуги"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Страны"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Заказы"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Туристы"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Имена"
                />
            <Button
                Style="{StaticResource MenuButton}"
                Content="Фамилии"
                />
        </StackPanel>

        <Grid Grid.Column="1">
            
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <Frame x:Name="RootFrame" Grid.Row="0" NavigationUIVisibility="Hidden" />

            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Silver"/>

            <Button 
                x:Name="CloseButton"
                Style="{StaticResource ClosePageButton}"
                Grid.Row="1" 
                Content="Закрыть" 
                HorizontalAlignment="Right" 
                Width="60"
                Click="CloseButton_Click"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button
                    Style="{StaticResource LeftArrowButton}"
                    Width="60"
                    >
                </Button>
                <Button
                    Style="{StaticResource RightArrowButton}"
                    Width="60"
                    />
            </StackPanel>
        </Grid>
    </Grid>

</Window>
