<Application 
    x:Class="BookingClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BookingClient"
    StartupUri="Windows/AuthorizationWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="InterMedium">pack://application:,,,/Fonts/#Inter Medium</FontFamily>
            <FontFamily x:Key="InterSemiBold">pack://application:,,,/Fonts/#Inter SemiBold</FontFamily>
            <FontFamily x:Key="InterBold">pack://application:,,,/Fonts/#Inter</FontFamily>
            <FontFamily x:Key="SourceCodeProRegular">pack://application:,,,/Fonts/#Source Code Pro Regular</FontFamily>
            <FontFamily x:Key="SourceCodeProSemiBold">pack://application:,,,/Fonts/#Source Code Pro SemiBold</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Geometries.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ComponentStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/СomplexComponentStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
